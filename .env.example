# Environment Configuration for Super Kamen Bot
# Copy this file to .env and modify as needed

# Ollama Settings
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=elyza/llama2-7b-chat

# Whisper Settings  
WHISPER_MODEL=base
WHISPER_LANGUAGE=ja

# TTS Settings
TTS_MODEL=tts_models/ja/kokoro/tacotron2-DDC
TTS_ENABLED=true

# Database Settings
DATABASE_PATH=data/conversations.db

# Web Interface Settings
STREAMLIT_PORT=8501
STREAMLIT_HOST=localhost

# Audio Settings
SAMPLE_RATE=16000
RECORDING_DURATION=5

# Debug Settings
DEBUG_MODE=false
LOG_LEVEL=INFO
